<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Base application Views theme. -->


    <style name="H1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="H2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="H3" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="H4" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H4</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="H5" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_regular</item>
    </style>

    <style name="H6" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H6</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="Subtitle_1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Subtitle_1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rowdies_bold</item>
    </style>

    <style name="Subtitle_2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Subtitle_2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Edit_Text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/item_in_item_padding</item>
        <item name="android:textSize">@dimen/Body_1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Body_1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Body_1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Body_2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Body_2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BUTTON" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/BUTTON</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="Caption" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Caption</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
    </style>

    <style name="OVERLINE" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/OVERLINE</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>